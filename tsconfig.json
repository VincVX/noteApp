{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true, // Skips type checks in declaration files

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Relax to Ignore Errors */
    "strict": false, // Disable strict type checking entirely
    "noUnusedLocals": false, // Ignore unused local variables
    "noUnusedParameters": false, // Ignore unused function parameters
    "noFallthroughCasesInSwitch": false // Allow switch-case fallthrough
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
